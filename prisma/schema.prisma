generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id              String    @id @default(cuid())
  firstName       String?
  lastName        String?
  password        String
  phoneNumber     String    @unique
  roles           Json
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  imageId         String?
  isPhoneVerified Boolean   @default(false)
  twoFA           Boolean   @default(false)
  comments        Comment[]
  otp             Otp[]
  ratings         Rating[]
  tours           Tour[]
  image           Image?    @relation(fields: [imageId], references: [id])
}

model Otp {
  id        String   @id @default(cuid())
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime @db.Timestamp(5)
  useCase   UserCase
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
}

model Image {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tourId    String?
  tour      Tour?    @relation(fields: [tourId], references: [id])
  users     User[]
}

model Rating {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  userId    String?
  value     Float
  user      User?    @relation(fields: [userId], references: [id])
}

model Comment {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  text      String?
  updatedAt DateTime @updatedAt
  userId    String?
  tourId    String?
  tour      Tour?    @relation(fields: [tourId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model Tour {
  createdAt   DateTime  @default(now())
  description String?
  id          String    @id @default(cuid())
  latitude    Float
  longitude   Float
  name        String
  updatedAt   DateTime  @updatedAt
  userId      String?
  comments    Comment[]
  images      Image[]
  user        User?     @relation(fields: [userId], references: [id])
}

enum UserCase {
  LOGIN
  D2FA
  E2FA
  VPHONE
}
